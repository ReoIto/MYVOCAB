<div class="main posts-edit">
  <h1 class="form-heading">EDIT</h1>
  <% @post.errors.full_messages.each do |message| %>
      <div class="form-error">
        <%= message %>
      </div>
  <% end %>
  <div class="post-form">
    <%= form_with url: posts_update_path do |f| %>

    <div class="form-item form-item-content">
      <%= f.text_field :content, value: @post.content %>
    </div>
    <div class="form-item">
      <%= f.text_field :meaning, value: @post.meaning, placeholder: "Meaning" %>
    </div>
    <div class="form-item">
        <%= f.text_field :example, value: @post.example, placeholder: "Example" %>
    </div>
    <div class="form-item">
      <%= f.text_field :synonyms, value: @post.synonyms, placeholder: "Synonyms" %>
    </div>
    <div class="form-item">
        <%= f.text_field :antonyms, value: @post.antonyms, placeholder: "Antonyms" %>
    </div>
    <div class="form-item">
      <%= f.text_area :note, size: "30x6", value: @post.note, placeholder: "Notes" %>
    </div>
    <div class="submit"><%= f.submit("SAVE") %></div>
    <% end %>
  </div>
</div>
