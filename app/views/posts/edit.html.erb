<div class="main posts-edit">
  <div class="container">
    <h1 class="form-heading">EDIT</h1>
    <% @post.errors.full_messages.each do |message| %>
        <div class="form-error">
          <%= message %>
        </div>
    <% end %>
    <div class="post-form">
      <%= form_with url: posts_update_path do |f| %>

      <div class="form-item form-item-content">
        <%= f.text_field :content, value: @post.content %>
      </div>
      <div class="form-item">
        <%= f.text_field :meaning, value: @post.meaning %>
      </div>
      <div class="form-item">
        <%= f.text_field :example, value: @post.example %>
      </div>
      <div class="form-item">
        <%= f.text_field :synonyms, value: @post.synonyms %>
      </div>
      <div class="form-item">
        <%= f.text_field :antonyms, value: @post.antonyms %>
      </div>
      <div class="form-item">
        <%= f.text_area :note, size: "30x6", value: @post.note %>
      </div>

      <div class="submit"><%= f.submit("SAVE") %></div>
      <% end %>
    </div>
    </div>
</div>
