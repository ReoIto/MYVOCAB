<div class="main posts-index">
  <div class="posts-likes-container">
    <div class="pagination-box">
      <%= paginate @likes %>
    </div>
    <div class="posts-index-box">
    <% @likes.each do |like| %>
    <% post = Post.find_by(id: like.post_id) %>
      <div class="posts-index-item">
        <div class="post-item-username">
          <%= link_to(post.user.name, "/users/#{post.user.id}") %>
        </div>
        <div class="likes-post-left">
          <% if post.user.image_name.blank? %>
            <%= image_tag "/user_images/default_user_image.gif" %>
          <% else %>
            <%= image_tag "/user_images/#{post.user.image_name}" %>
          <% end %>
        </div>

        <% if Like.find_by(user_id: current_user.id, post_id: post.id) %>
         <div class="post-item-bookmarked-icon">
           <%= link_to("/likes/#{post.id}/destroy", {method: "post"}) do %>
             <span class="fas fa-bookmark"</span>
           <% end %>
         </div>
        <% else %>
        <div class="post-item-bookmarked-icon">
           <%= link_to("/likes/#{post.id}/create", {method: "post"}) do %>
             <span class="far fa-bookmark"></span>
           <% end %>
        </div>
        <% end %>

        <div class="likes-post-item-content">
          <%= link_to(post.content, "/posts/#{post.id}") %>
          <p><%= post.example %></p>
        </div>
      </div>
    <% end %>
    </div>
    <div class="pagination-box">
      <%= paginate @likes %>
    </div>
  </div>
</div>
