<div class="main posts-index">
  <div class="container posts-index-container">
    <% if @searched_posts %>
    <div class="post-index-box">
      <% @searched_posts.each do |result| %>
        <div class="posts-index-item">
          <div class="post-left">
            <img src="<%= "/user_images/#{result.user.image_name}" %>">
          </div>
          <div class="post_right">
            <%= link_to(result.user.name, "/users/#{result.user.id}" ) %>
          </div>
            <%= link_to(result.content, "/posts/#{result.id}") %>
        </div>
      <% end %>
      </div>

    <% else %>
      <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
        <img src="<%= "/user_images/#{post.user.image_name}" %>">
      </div>
      <div class="post_right">
        <%= link_to(post.user.name, "/users/#{post.user.id}" ) %>
      </div>
        <%= link_to(post.content, "/posts/#{post.id}") %>
      </div>
      <% end %>
    <% end %>
  <%= paginate @posts %>
  </div>
</div>
