<!DOCTYPE html>
<html>
  <head>
    <title>MyVocab</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>

  <body>
    <header>
        <div class="header-contents">
          <div class="header-name">
            <% if user_signed_in? %>
            <!-- being logged in -->
              <%= link_to("MYVOCAB", "/posts/index") %>
            <% else %>
            <!-- being NOT logged in -->
              <%= link_to("MY VOCAB", "/top") %>
            <% end %>
          </div>
          <!-- Flash message -->
          <% if flash[:notice] %>
            <div class="flash">
                <%= flash[:notice] %>
            </div>
          <% end %>
          <div class="header-menu">
            <ul>
            <% if user_signed_in? %>
              <!-- being logged in -->

              <!-- search bar -->
              <%= search_form_for @search, url: posts_index_path do |f| %>
              <div class="search_bar">
                <%= f.search_field :content_or_meaning_cont %>
                <div class="search_btn"><%= f.submit "Search" %></div>
              </div>
              <% end %>

              <li>
                <%= link_to("/posts/new") do %>
                  <i class="fas fa-edit"></i>
                <% end %>
              </li>
              <li>
                <%= link_to("/posts/index") do %>
                  <i class="fas fa-users"></i>
                <% end %>
              </li>
              <li>
                <%= link_to("/posts/#{current_user.id}/index") do %>
                  <i class="fas fa-user"></i>
                <% end %>
              </li>
              <li>
                <%= link_to("/posts/#{current_user.id}/likes") do %>
                  <i class="fas fa-bookmark"></i>
                <% end %>
              </li>
              <li>
                <%= link_to("/about") do %>
                  <i class="far fa-question-circle"></i>
                <% end %>
              </li>
              <li>
                <%= link_to("/users/#{current_user.id}") do %>
                  <i class="fas fa-cog"></i>
                <% end %>
              </li>
              <li>
                <%= link_to "LOGOUT", destroy_user_session_path, method: :delete %>
              </li>
            <% else %>
              <!-- being NOT logged in -->
              <li>
                <%= link_to("/about") do %>
                  <i class="far fa-question-circle"></i>
                <% end %>
              </li>
              <li>
                <%= link_to "devise_signup", new_user_registration_path %>
              </li>
              <li>
                <%= link_to "devise_signin", new_user_session_path %>
              </li>
              <li>
                <%= link_to("SIGNUP", "/users/new") %>
              </li>
              <li>
                <%= link_to("LOGIN", "/login") %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
    </header>

    <%= yield %>

  </body>
</html>
