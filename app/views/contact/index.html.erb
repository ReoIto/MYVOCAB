<div class="main contact-page">
  <div class="container">
    <div class="form-heading">
      <h1>CONTACT</h1>
    </div>
    <%= form_for @contact, :url => contact_confirm_path do |f| %>
    <div class="contact-form">
      <% if @contact.errors.any? %>
        <div class="error">
          <strong>入力内容にエラーがあります</strong>
          <ul>
            <% @contact.errors.each do |attr, msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-item">
        <%= f.label :名前 %>
        <%= f.text_field :name %>
      </div>

      <div class="form-item">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email %>
      </div>

      <div class="form-item">
        <%= f.label :お問合せ内容 %>
        <%= f.text_area :message, size: "30x6" %>
      </div>

      <div class="submit">
        <%= f.submit '確認' %>
      </div>
    <% end %>
    </div>
  </div>
</div>
