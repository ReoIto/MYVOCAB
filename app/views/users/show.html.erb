<div class="main user-show">
  <div class="container">
    <div class="user">
      <%= image_tag "/user_images/#{@user.image_name}" %>
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <% if @user.id == current_user.id %>
        <div class="btn"><%= link_to("EDIT", "/users/#{@user.id}/edit") %></div>
      <% end %>
    </div>
  </div>
</div>
